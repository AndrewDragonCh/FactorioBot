{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "strictNullChecks": true,
    "allowUmdGlobalAccess": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceRoot": "https://github.com/AndrewDragonCh/FactorioBot"
  }
}